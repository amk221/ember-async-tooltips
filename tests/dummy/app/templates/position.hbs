<div class="controls">
  <label class="control">
    Position
    <select onchange={{action "setPosition" value="target.value"}} class="position">
      <option value="">auto</option>
      <option>top left</option>
      <option>top center</option>
      <option>top right</option>
      <option>right middle</option>
      <option>right top</option>
      <option>right bottom</option>
      <option>bottom right</option>
      <option>bottom center</option>
      <option>bottom left</option>
      <option>left middle</option>
      <option>left top</option>
      <option>left bottom</option>
    </select>
  </label>

  <label class="control">
    Columns <input type="number" min="2" class="number-input columns" value={{this.columns}} oninput={{action "setColumns" value="target.value"}}>
  </label>

  <label class="control">
    Rows <input type="number" min="2" class="number-input rows" value={{this.rows}} oninput={{action "setRows" value="target.value"}}>
  </label>

  <span class="control">
    <label> Hover delay <input type="number" min="1" class="number-input hover-delay" title="In" value={{this.showDelay}} oninput={{action "setShowDelay" value="target.value"}}></label><input type="number" min="1" class="number-input hover-delay" title="Out" value={{this.hideDelay}} oninput={{action "setHideDelay" value="target.value"}}>
  </span>

  <label class="control">
    Load delay <input type="number" min="1" class="number-input load-delay" value={{this.loadDelay}} oninput={{action "setLoadDelay" value="target.value"}}>
  </label>

  <a href="#" {{action "rerender"}}>Reset</a>
</div>

<table class="grid">
  <tbody>
    <tr class="row">
      <td class="cell">top left</td>
      <td class="cell">top center</td>
      <td class="cell">top right</td>
    </tr>
    <tr class="row">
      <td class="cell">left middle</td>
      {{! template-lint-disable inline-styles }}
      <td class="cell" style={{this.boundaryStyles}}></td>
      <td class="cell">right middle</td>
    </tr>
    <tr class="row">
      <td class="cell">bottom left</td>
      <td class="cell">bottom center</td>
      <td class="cell">bottom right</td>
    </tr>
  </tbody>
</table>

{{#if this.showTooltipper}}
  <ToolTipper
    draggable="true"
    @drag={{action "storeLastPos"}}
    @dragStart={{action "storeStartPos"}}
    @dragEnd={{action "reposition"}}
    @onLoad={{action "load"}}
    @showDelay={{this.showDelay}}
    @hideDelay={{this.hideDelay}}
    @tooltip={{component "tool-tip"
      text="Hello World"
      position=this.position
      columns=this.columns
      rows=this.rows
    }}>
    Hover over me
    {{#if this.isLoading}}
      <br>
      Loading...
    {{/if}}
  </ToolTipper>
{{/if}}